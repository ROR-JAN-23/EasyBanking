<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4">
  
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">

          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Register</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="field">
                    <%= f.label :first_name %><br />
                    <%= f.text_field :first_name, autofocus: true %>
                  </div>
                </div>

                <div class="col-md-6 mb-4">
                  <div class="field">
                    <%= f.label :last_name %><br />
                    <%= f.text_field :last_name, autofocus: true %>
                  </div>
                </div>
              </div>

              <!-- DOB input -->
              <div class="form-outline mb-4">
                <div class="field">
                    <%= f.label :date_of_birth %><br />
                    <%= f.date_field :date_of_birth, autofocus: true %>
                </div>
              </div>

              <!-- Address input -->
              <div class="form-outline mb-4">
                <div class="field">
                  <%= f.label :address %><br />
                  <%= f.text_field :address, autofocus: true %>
                </div>
              </div>

              <!-- Email input -->
              <div class="form-outline mb-4">
                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true %>
                </div>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <div class="field">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, autofocus: true %>
                </div>
              </div>

              <div class="form-outline mb-4">
                <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autofocus: true %>
                </div>
              </div>

              <!-- Account type input -->
              <div class="form-outline mb-4">
                  <div class="field">
                             <%= f.label :account_type %><br>
                             <%= f.select :account_type, User.account_types %>
                  </div>
              </div>
               



              <!-- Checkbox -->
              <div class="form-check d-flex justify-content-center mb-4">
                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
                <label class="form-check-label" for="form2Example33">
                  Agree terms and condition
                </label>
              </div>

              <!-- Submit button -->
            
                <div class="actions">
                  <%= f.submit "Sign up" %>.
                </div>
        

              <!-- Sign in -->
              <p class="small fw-bold mt-2 pt-1 mb-0">Already have Account?  <a href="/users/sign_in"
                class="link-danger">Sign in</a></p>

          <% end %>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
          alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->